<Page x:Class="ClientCloud.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientCloud"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <TextBlock Name="welcome" HorizontalAlignment="Left" Margin="211,10,0,0" TextWrapping="Wrap" Text="Добро пожаловать " VerticalAlignment="Top" Height="72" Width="389" FontSize="25"/>
        <ListBox Name="listFiles" Height="296" Margin="10,54,10,0" VerticalAlignment="Top"/>
        <Button Name="downloadButton" Content="Скачать" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="113" Click="DownloadClick"/>
        <Button Name="uploadButton" Content="Загрузить" HorizontalAlignment="Left" Margin="321,370,0,0" VerticalAlignment="Top" Width="113" Click="UploadClick"/>
        <Button Name="refreshButton" Content="Обновить" HorizontalAlignment="Left" Margin="632,370,0,0" VerticalAlignment="Top" Width="113" Click="RefreshClick"/>
        <ProgressBar Name="loading" HorizontalAlignment="Left" Height="27" Margin="186,210,0,0" VerticalAlignment="Top" Visibility="Hidden" Width="404" IsIndeterminate="True"/>

    </Grid>
</Page>
